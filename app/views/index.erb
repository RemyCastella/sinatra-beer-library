<section>
  <h2>Featured Ales</h2>
  <ul>
    <% @beers.each do |beer| %>
      <li>
        <a href="/beers/<%= beer.name.downcase.gsub(" ", "_") %>"><%= beer.name %></a>
      </li>
    <% end %>
  </ul>
</section>
<section>
  <h2>See what others are drinking</h2>
  <ul>
    <% @users.each do |user| %>
      <li>
        <a href="/users/<%= user.username %>"><%= user.username %></a>
      </li>
    <% end %>
  </ul>
</section>
